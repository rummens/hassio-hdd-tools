{
  "name": "HDD Tools",
  "version": "1.2.0",
  "slug": "hdd_tools",
  "description": "HDD Tools provides S.M.A.R.T. information",
  "url": "https://github.com/Draggon/hassio-hdd-tools",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["share:rw"],
  "privileged": ["SYS_ADMIN", "SYS_RAWIO"],
  "devices": ["/dev/sda", "/dev/sdb", "/dev/sdc", "/dev/sdd", "/dev/sde", "/dev/nvme0", "/dev/nvme1"],
  "full_access": true,
  "homeassistant": "2024.11.3",
  "homeassistant_api": true,
  "options": {
      "sensor_state_type": "temperature",
      "additional_sensor_state_types": [],
      "sensor_name": "sensor.hdd_smart",
      "additional_sensor_names": [],
      "friendly_name": "Hdd SMART",
      "additional_friendly_names": [],
      "hdd_path": "/dev/sda",
      "additional_hdd_paths": [],
      "device_type": "auto",
      "additional_device_types": [],
      "attributes_format": "object",
      "additional_attributes_formats": [],
      "attributes_property": "",
      "additional_attributes_properties": [],
      "check_period": 1,
      "database_update": true,
      "database_update_period": 168,
      "performance_check": false,
      "debug": false,
      "output_file": "temp.log"
  },
  "schema": {
      "sensor_state_type": "list(smart_state|temperature)",
      "additional_sensor_state_types": ["str"],
      "sensor_name": "match(^(sensor|binary_sensor)\\.\\w*$)",
      "additional_sensor_names": ["str"],
      "friendly_name": "str",
      "additional_friendly_names": ["str"],
      "hdd_path": "device(subsystem=block)",
      "additional_hdd_paths": ["str"],
      "device_type": "str",
      "additional_device_types": ["str"],
      "attributes_format": "list(object|list)",
      "additional_attributes_formats": ["str"],
      "attributes_property": "str",
      "additional_attributes_properties": ["str"],
      "check_period": "int(1,1440)",
      "database_update": "bool",
      "database_update_period": "int(1,5000)",
      "performance_check": "bool",
      "debug": "bool",
      "output_file": "str"
    }
}
